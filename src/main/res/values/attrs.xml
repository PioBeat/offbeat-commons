<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="OffbeatTextView">
        <attr name="ofpFont" format="string" />
        <attr name="ofpCharacterDelay" format="integer" />
        <attr name="ofpLoopTypewriter" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabeledTextView">
        <attr name="ofpLabel" format="string" localization="suggested" />
        <attr name="ofpText" format="string" localization="suggested" />
        <attr name="ofpLabelFontSize" format="dimension" />
        <attr name="ofpTextFontSize" format="dimension" />
        <attr name="ofpLabelColor" format="color" />
        <attr name="ofpTextColor" format="color" />
        <attr name="ofpTextFont" format="string" />
        <attr name="ofpTitleFont" format="string" />
    </declare-styleable>

    <declare-styleable name="SkillComp">
        <attr name="ofpMaxLevels" format="integer"/>
        <attr name="ofpColors" format="string"/>
        <attr name="ofpElementMargin" format="dimension"/>
        <attr name="ofpWithAnimation" format="boolean"/>
        <attr name="ofpAnimationDuration" format="integer"/>
        <attr name="ofpAutoStartAnimation" format="boolean"/>
    </declare-styleable>
</resources>